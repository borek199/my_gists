<!DOCTYPE html>
<html>
<head>
  <title>MyGists</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

</head>
<body>
<div class="body">
  <div class="header">
    <div class="contain">
      <a href="/" class="btn btn-primary" role="button"> Strona główna</a>
      <a href="https://github.com/borek199/my_gists" class="btn btn-primary">Github</a>
    </div>
    <div class="search">
    <%= form_tag gists_path, :method => 'get', :id => "gists_search", :class => "form-inline" do %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], :class=> "form-control", :placeholder => "Description" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Search", :name => nil, :class => "form-control" %>
          </div>
    <% end %>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>
</div>

</body>
</html>
