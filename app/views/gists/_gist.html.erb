<div class="col-lg-11">
      <div>Description: <%= gist.description[0,30] %></div><div> Language:  <%= gist.lang %></div>
      <div ><%= raw Pygments.highlight(gist.snippet[0,250], lexer: gist.lang) %></div>

      <div><%= link_to 'Show', gist, class: "btn btn-primary",style:"float: left;  margin-right: 10px" %>
        <%= link_to 'Edit', edit_gist_path(gist), class: "btn btn-warning",style:" float: left; margin-right: 10px" %>
        <%= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' },
                    class: "btn btn-danger",style:"float: left" %>
      </div>
</div>

